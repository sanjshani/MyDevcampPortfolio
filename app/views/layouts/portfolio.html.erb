<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" >

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <meta name="keywords" content="<%= @seo_keywords %>"/>

    <%= stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>    
    <%= render "shared/portfolio_nav" %>                                                 <!-- Navbar -->

    <main role="main">    
      <%= render "shared/portfolio_header" unless logged_in?(:site_admin) %>          <!-- Header/Jumbotron -->

      <%= yield %>
    </main>

    <%= render "shared/portfolio_footer" %>                                              <!-- Footer -->
    <%= source_helper("application") %>

  </body>
</html>
