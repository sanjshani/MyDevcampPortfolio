<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: "form-control", placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: "form-control", rows: 10, placeholder: 'Content' %>      <!--"rows" element would enlarge the text_area-->
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-block" %>             <!--add "Submit" argument before class-->
  </div>
<% end %>